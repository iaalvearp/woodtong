</section>

<style>
    .hero-container {
        position: relative;
        height: 90vh;
        min-height: 600px;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background-color: var(--oscuro);
    }

    .hero-overlay {
        position: absolute;
        width: 100%;
        height: 100%;
        inset: 0;
        background: linear-gradient(
            to bottom,
            rgba(6, 76, 57, 0.5) 30%,
            rgba(6, 76, 57, 0.2) 100%
        );
        z-index: 3;
    }

    .hero-content {
        position: relative;
        z-index: 10;
        text-align: center;
        color: var(--blanco);
        max-width: 800px;
        padding: 0 1.5rem;
    }

    .hero-titulo {
        font-size: clamp(3rem, 10vw, 6rem);
        font-weight: 700;
        letter-spacing: -0.04em;
        margin-bottom: 1.5rem;
        line-height: 1;
    }

    .hero-subtitulo {
        font-size: clamp(1.1rem, 3vw, 1.5rem);
        font-weight: 400;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 3rem;
        max-width: 500px;
        margin-inline: auto;
    }

    .hero-acciones {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .btn-primario {
        background-color: var(--blanco);
        color: var(--oscuro);
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 2rem;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition:
            transform 0.2s ease,
            background-color 0.2s ease;
    }

    .btn-primario:hover {
        transform: scale(1.05);
        background-color: var(--gris-apple);
    }

    .btn-secundario {
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--blanco);
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 1rem 2.5rem;
        border-radius: 2rem;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        backdrop-filter: blur(10px);
        transition: background-color 0.2s ease;
    }

    .btn-secundario:hover {
        background-color: rgba(255, 255, 255, 0.2);
    }

    /* Carrusel Logic */
    .carrusel-infinito {
        position: absolute;
        inset: 0;
        z-index: 1;
    }

    .carrusel-infinito::after {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.3) 0%,
            rgba(0, 0, 0, 0.5) 100%
        );
        z-index: 2;
    }

    .track-carrusel {
        display: flex;
        width: fit-content;
        height: 100%;
        animation: scroll-hero 60s linear infinite;
    }

    .slide-hero {
        width: 100vw;
        height: 100%;
        flex-shrink: 0;
    }

    .slide-hero img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    @keyframes scroll-hero {
        from {
            transform: translateX(0);
        }
        to {
            transform: translateX(-300vw);
        }
    }

    @media (max-width: 768px) {
        .hero-acciones {
            flex-direction: column;
            width: 100%;
            max-width: 300px;
            margin-inline: auto;
        }

        .btn-primario,
        .btn-secundario {
            width: 100%;
        }
    }
</style>
