    <!-- Carrusel Infinito Background -->
    <div class="carrusel-infinito">
        <div class="track-carrusel">
            {
                imagenesScroll.map((img) => (
                    <div class="slide-hero">
                        <img src={img.url} alt={img.descripcion} />
                    </div>
                ))
